  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Serverless Offline",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/serverless",
      "windows": {
        "runtimeExecutable": "${workspaceFolder}\\node_modules\\.bin\\serverless.ps1"
      },
      "args": ["offline", "start"]
    },
    {
      "name": "Node.js - Debug Current File",
      "type": "node",
      "request": "launch",
      "program": "${file}"
    }
  ]
}
